{% extends 'base.html.twig' %}

{% block title %}Réinitialiser votre mot de passe{% endblock %}

{% block body %}
<div class="container my-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            {% for flash_error in app.flashes('reset_password_error') %}
                <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
            {% endfor %}
            <div class="card">
                <div class="card-header">
                    <h1 class="card-title">Réinitialiser votre mot de passe</h1>
                </div>
                <div class="card-body">
                    {{ form_start(resetForm) }}
                    <div class="mb-3">
                        <small>Veuillez entrer un nouveau mot de passe pour votre compte.</small>
                    </div>
                    {{ form_row(resetForm.plainPassword, {
                        'attr': {
                            'class': 'form-control',
                            'placeholder': 'Nouveau mot de passe'
                        },
                        'label_attr': {
                            'style': 'display: none'
                        }
                    }) }}
                    <button class="btn btn-primary btn-block mt-4 mb-1">Réinitialiser le mot de passe</button>
                    {{ form_end(resetForm) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
