{% extends 'base.html.twig' %}

{% block title %}Réinitialiser votre mot de passe{% endblock %}

{% block body %}
<div class="container my-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            {% for flash_error in app.flashes('reset_password_error') %}
                <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
            {% endfor %}
            <div class="card">
                <div class="card-header">
                    <h1 class="card-title">Réinitialiser votre mot de passe</h1>
                </div>
                <div class="card-body">
                    {{ form_start(requestForm) }}
                    <div class="mb-3">
                        <small>Saisissez votre adresse électronique et nous vous enverrons un lien pour réinitialiser votre mot de passe.</small>
                    </div>
                    {{ form_row(requestForm.email, {
                        'attr': {
                            'class': 'form-control',
                            'placeholder': 'example@mail.fr'
                        }
                        
                    }) }}
                    <button class="btn btn-primary btn-block mt-4 mb-1">Envoyer un courriel de réinitialisation du mot de passe</button>
                    {{ form_end(requestForm) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}