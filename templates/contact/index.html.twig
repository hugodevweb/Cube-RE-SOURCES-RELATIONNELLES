{% extends 'base.html.twig' %}
{% block title %}Page de contact{% endblock %}
{% block body %}
    <div class="container mt-4">
        <h1 class="my-4">Page de Contact</h1>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}

        {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
            {% if not is_authenticated %}
                <div class="form-group row mb-3">
                    {{ form_label(form.name, null, {'label_attr': {'class': 'control-label col-sm-2'}}) }}
                    <div class="col-sm-10">
                        {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>
                <div class="form-group row mb-3">
                    {{ form_label(form.email, null, {'label_attr': {'class': 'control-label col-sm-2'}}) }}
                    <div class="col-sm-10">
                        {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>
            {% endif %}
            <div class="form-group row mb-3">
                {{ form_label(form.subject, null, {'label_attr': {'class': 'control-label col-sm-2'}}) }}
                <div class="col-sm-10">
                    {{ form_widget(form.subject, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            <div class="form-group row mb-3">
                {{ form_label(form.message, null, {'label_attr': {'class': 'control-label col-sm-2'}}) }}
                <div class="col-sm-10">
                    {{ form_widget(form.message, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-12 text-center">
                    <button type="submit" class="btn btn-primary w-50">Send</button>
                </div>
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}