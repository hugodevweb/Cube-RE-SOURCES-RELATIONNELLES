{% extends 'base.html.twig' %}
{% block title %}Page de contact{% endblock %}
{% block body %}
    <div class="container d-flex justify-content-center align-items-center">
        <div class="card-no-border" style="margin-top: 10px;">
            <h2 class="mb-4 text-center">Contact</h2>
            {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
            {% endfor %}

        {{ form_start(form) }}
            {% if not is_authenticated %}
                <div class="form-floating">
                    {{ form_widget(form.nom, {'attr': {'class': 'form-control mb-0 rounded-bottom-0 rounded-top', 'placeholder': 'Nom'}}) }}
                    {{ form_label(form.nom, 'Nom', {'label_attr': {'class': 'form-label'}}) }}
                </div>
                <div class="form-floating">
                    {{ form_widget(form.email, {'attr': {'class': 'form-control mb-0 rounded-0', 'placeholder': 'Email'}}) }}
                    {{ form_label(form.email, 'Email', {'label_attr': {'class': 'form-label'}}) }}
                </div>
            {% endif %}
            <div class="form-floating">
                {{ form_widget(form.sujet, {'attr': {'class': 'form-control mb-0 rounded-0', 'placeholder': 'Sujet'}}) }}
                {{ form_label(form.sujet, 'Sujet', {'label_attr': {'class': 'form-label'}}) }}
            </div>
            <div class="form-floating">
                {{ form_widget(form.message, {'attr': {'class': 'form-control mb-0 rounded-bottom', 'placeholder': 'Message'}}) }}
                {{ form_label(form.message, 'Message', {'label_attr': {'class': 'form-label'}}) }}
            </div>
            <div class="text-center mt-3">
                <button type="submit"  class="btn btn-primary px-5 mt-3">{{ button_label|default('Envoyer') }}</button>
            </div>
            
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
